#!/bin/bash

if [ $# -ne 3 ]; then
    echo "Please give: start line number, end line number, file name."
    exit 1
fi

digital='^[0-9]+$'
if ! [[ $1 =~ $digital ]]; then
    echo "Not-a-number given for start line."
    exit 1
fi
if ! [[ $2 =~ $digital ]]; then
    echo "Not-a-number given for end line."
    exit 1
fi

if [ $1 -gt $2 ]; then
    echo "Start line number must be less or equal to end line number."
    exit 1
fi

sed -n "$1"','"$2"'p' < $3
